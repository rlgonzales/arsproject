<h1>Listing updates</h1>

<table>
  <tr>
    <th>Owner</th>
    <th>Association</th>
    <th>Type</th>
    <th>Description</th>
    <th>Followed</th>
  </tr>

<% @updates.each do |update| %>
  <tr>
    <td><%=h update.owner_id %></td>
    <td><%=h update.association_id %></td>
    <td><%=h update.type_id %></td>
    <td><%=h update.description %></td>
    <td><%=h update.followed %></td>
    <td><%= link_to 'Show', update %></td>
    <td><%= link_to 'Edit', edit_update_path(update) %></td>
    <td><%= link_to 'Destroy', update, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New update', new_update_path %>