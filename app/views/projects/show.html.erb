<% title @project.name %>
<%= javascript_tag "var project_id = "+@project.id.to_s+';' %>


<div class="ap_project_description">
  <button id="ap_add_new_milestone" class="ap_add_new">+</button>
  <% @project.milestones.each do |m| %>
  <div class="ap_project_milestone">
    <%= m.name %> <button id="ap_add_new_story" class="ap_add_new ap_add_new_story">+</button>
    <% m.stories.each do |s| %>
      <div class="ap_project_milestone_story">
        <%= s.name %>
      </div>
    <% end %>
   </div>
  <% end %>
</div>
