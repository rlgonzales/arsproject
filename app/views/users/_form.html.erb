<% form_for @user do |f| %>
  <%= f.error_messages %>

  <div class="ap_gravatar">
    <div class="ap_gravatar_empty">
      ?
    </div>
  </div>

  <div class="ap_form ap_signup">
    <p>
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.text_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation %><br />
      <%= f.text_field :password_confirmation %>
    </p>

    <p><%= f.submit "Submit" %></p>
  </div>
<% end %>
